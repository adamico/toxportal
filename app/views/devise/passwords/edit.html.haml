- title t("devise.passwords.change_your_password")
= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: "form-horizontal" }) do |f|
  = devise_error_messages!
  = f.input :reset_password_token, as: :hidden
  = f.input :password, as: :password, label: t("devise.passwords.new_password")
  = f.input :password_confirmation, as: :password, label: t("devise.passwords.confirm_new_password")
  .actions
    = f.button t("devise.passwords.change_my_password"), class: "btn-primary"
= render "links"
